@model  List<CoursesViewModel>
<p>
    نمایش همه آموزش ها
</p>
<a href="http://parcham.asia" class="btn btn-primary borolink">برو به پرچم </a>

<div class="row  sec1">
    @foreach (var course in Model)
    {
    <div class="col-sm-3 col-lg-3">
        <div class="card">

            <img src=@course.MainImage class="card-img-top" alt="مهدی">
            <div class="card-body">
                <h5 class="card-title">@course.Title</h5>
                <p class="card-text">پرچم مبدل علم به ثروت</p>
                <a href="http://parcham.asia" class="btn btn-primary">رایگان</a>
                <p></p>


            </div>
            <div class="card-footer">
                <button class="btn btn-default"> @course.SaleCount   </button>
                <button class="btn btn-link">  سفارش0</button>
            </div>
        </div>
    </div>
    }
</div>




